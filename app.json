{
  "expo": {
    "name": "AnimeWorldz",
    "slug": "animeworldz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/icon.png",
    "splash": {
      "image": "./app/assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "checkAutomatically": "ON_ERROR_RECOVERY"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dovakiin0.animeworldz"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.dovakiin0.animeworldz"
    },
    "web": {
      "favicon": "./app/assets/favicon.png"
    },
    "description": "Animeworldz now ported to mobile\n(Available for android only as of now)",
    "githubUrl": "https://github.com/Dovakiin0/animeworldz-mobile"
  }
}
